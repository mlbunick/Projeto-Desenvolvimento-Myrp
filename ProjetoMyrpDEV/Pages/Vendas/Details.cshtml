@page
@model ProjetoMyrpDEV.Pages.Vendas.DetailsModel

@{
    ViewData["Title"] = "Detalhes da Venda";
}

<h1>Detalhes da Venda</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Cliente.Documento)
        </dd>
    </dl>
</div>

<div>
    <h4>Produtos</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Venda.VendaProdutos)
            {
                <tr>
                    <td>@item.Produto.Nome</td>
                    <td>@item.Quantidade</td>
                    <td>@item.Produto.Preco.ToString("C")</td>
                    <td>@(item.Quantidade * item.Produto.Preco)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><strong>Valor Total:</strong></td>
                <td><strong>@Model.Venda.ValorTotal.ToString("C")</strong></td>
            </tr>
        </tfoot>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Venda.Id">Editar</a> |
    <a asp-page="./Index">Voltar</a>
</div>
