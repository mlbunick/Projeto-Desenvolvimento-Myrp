@model ProjetoMyrpDEV.Pages.Clientes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Cliente</h1>

<h3>Tem certeza que quer deletar este cliente?</h3>
<h5>(As vendas associadas a este Cliente serão exclúidas)</h5>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Cliente.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar</a>
    </form>
</div>
